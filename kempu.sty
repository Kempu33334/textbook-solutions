% Define a common theorem style
\tcbset{
  mythestyle/.style={
    breakable,
    enhanced,
    coltitle=black,
    fonttitle=\bfseries,
    boxrule=0pt,
    left=2mm,
    right=2mm,
    top=0.5mm,
    bottom=1mm,
    arc=0pt,
    title filled=false,
    frame hidden,
    toptitle=1mm,
  }
}

\NewTColorBox[auto counter, number within=section]{theorem}{o}{%
  mythestyle,
  colframe=Green!75!black,
  colback=Green!5!white,
